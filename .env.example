# Compound Management System Configuration

# Flask Environment
FLASK_ENV=development
FLASK_DEBUG=True

# Security
SECRET_KEY=change-this-secret-key-in-production-please

# Database
DATABASE_URL=sqlite:///instance/compounds.db

# File Uploads
UPLOAD_FOLDER=app/uploads
MAX_CONTENT_LENGTH=16777216

# Application Settings
APP_NAME=Compound Management System
APP_VERSION=2.0.0

# Server Settings (optional)
HOST=127.0.0.1
PORT=8081

# Molecular Weight Calculation API (optional)
# MOLECULAR_WEIGHT_API_KEY=your-api-key-here
# MOLECULAR_WEIGHT_API_URL=https://api.example.com/molecular-weight

# Feedback Email Settings (optional)
# FEEDBACK_SMTP_SERVER=smtp.gmail.com
# FEEDBACK_SMTP_PORT=587
# FEEDBACK_SMTP_USERNAME=your-email@gmail.com
# FEEDBACK_SMTP_PASSWORD=your-app-password
# FEEDBACK_RECIPIENT_EMAIL=your-email@gmail.com